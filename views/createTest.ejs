<%include header.ejs%>
<div class="alert alert-danger d-none" role="alert" id="errorAddToTest">
    Question may already be added in the test
</div>
<div class="container">
  
  <div id="divListOfQuestion">
      <div class="d-flex flex-wrap justify-content-center" id="quesDiv">
        <% for(let i=0; i < data.length; i++) { %>
          <%if(data[i].isActive==true){%>
          <div class="card" id='<%= data[i]._id %>' style="width:250px;margin:10px;">
              <div class="card-body">
                  <h5 class="card-title title text-center font-weight-bold"><%=data[i].title %></h5>
                  <p class="card-text Desc"><%=data[i].desc %></p> 
                  <ul>
                  <% for(let j=0;j<data[i].options.length;j++){%>
                    <li class="card-text"><%=data[i].options[j]%></li>
                  <%}%>
                  </ul>
                  <button class="btn btn-outline-info w-100 addToTest" type="button">Add</button>
                  <span class="text-center d-none text-success">Added</span>
              </div>                  
          </div>
          <%}%>
          <%}%>
        </div>
    </div>
</div>

<%include footer.ejs%>